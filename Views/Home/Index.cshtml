@model IEnumerable<DCNE_Cake.Models.Product>

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<style>
    .item {
        background: #CB2027;
        text-align: center;
        height: 300px !important;
    }

    h2 {
        margin: 0;
        color: #888;
        padding-top: 100px;
        font-size: 50px;
    }

    h3, p {
        color: #000000;
    }
</style>


<div id="HomeCarousel" class="carousel slide" data-interval="2000" data-ride="carousel">
    <!--Carousel Indicators-->
    <ol class="carousel-indicators">
        <li data-target="#HomeCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#HomeCarousel" data-slide-to="1"></li>
        <li data-target="#HomeCarousel" data-slide-to="2"></li>
    </ol>
    <!--Carousel items-->
    <div class="carousel-inner">
        <div class="item active">
            @*<img src="~/Images/Cake/cake3.jpg" class="img-responsive" width="100%"/>*@
            <h2>DCNE-Cake</h2>
            <div class="carousel-caption">
                <h3>This is the First Label</h3>
                <p>One bite will make you ask for more</p>
            </div>
        </div>
        <div class="item">
            @*<img src="~/Images/Cake/cake2.jpg" class="img-responsive" width="100%"/>*@
            <div class="carousel-caption">
                <h2>Complaint</h2>
                <h3>This is the  Second Label</h3>
                <p>
                    Your Complaints are solved on this platform.
                        <br />
                    It brings customers closer to the products they purchase by giving each customer 
            a platform to give their feedback on the product purchased and consumed
                </p>
            </div>
        </div>
        <div class="item">
            @*<img src="~/Images/Cake/Cake1.jpg" class="img-responsive" width="100%"/>*@
            <div class="carousel-caption">
                <h3>This is the  Third Label</h3>
                <p>The content of the Third Slide goes in here </p>
            </div>
        </div>
    </div>
    <!--Carousel Controls-->
    <a class="left carousel-control " href="#HomeCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
    <a class="right carousel-control" href="#HomeCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
</div>

<div style="margin-bottom: 20px;"></div>


@*@Html.Raw(ViewData["template"])*@

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="thumbnail">
                <img src="~/Images/Cake/cake3.jpg" />
                <div class="caption">
                    <a href="Product/Details/@item.ProductId" >@item.Name</a>
                </div>
            </div>
        </div>  
    }
</div>

