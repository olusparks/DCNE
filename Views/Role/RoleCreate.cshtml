@{
    ViewBag.Title = "RoleCreate";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div class="page-header">
    <h2>Create Role</h2>
</div>
@using (Html.BeginForm("RoleCreate", "Role", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
{ 
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    
    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
                @Html.Label("Role", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("roleName", "", htmlAttributes: new { @class = "form-control", placeholder = "Enter Role Name"})
                </div>
            </div>

            <button type="submit" class="btn btn-success col-md-offset-2">Save</button>
        </div>
    </div>
} 
