<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DCNE-Cake</title>

    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-3.3.5/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-3.3.5/css/style.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/jquery-ui-1.11.4/jquery-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-social-gh-pages/assets/css/font-awesome.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-social-gh-pages/bootstrap-social.css" />
    <link href="~/Content/animate.css" rel="stylesheet" />

    <script type="text/javascript" src="~/Content/bootstrap-3.3.5/js/jquery-1.11.3.js"></script>
    <script src="~/Scripts/jquery.elevateZoom-3.0.8.min.js"></script>
</head>

<body>
    <!-- Start of navigation bar -->
    <nav class="navbar navbar-inverse navbar-static-top" role="navigation" style="margin-bottom: 5px">

        <div class="container">
            <div class="navbar-header">
                <!--Invisible and collapseable button created and seen only for smaller screen -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bsnavbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">DCNE-Cake <span class="glyphicon glyphicon-heart"></span></a>
            </div>

            <div class="collapse navbar-collapse" id="bsnavbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="divider"></li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li class="divider"></li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home") </li>
                    <li class="divider"></li>
                    <li>@Html.ActionLink("Drop Complaints", "Create", "Complaint")</li>
                    <!--Dropdown navbar-->
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Register", "Register", "Account")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Log in", "Login", "Account")</li>
                            @if (Request.IsAuthenticated && HttpContext.Current.User.IsInRole("Admin"))
                            {
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Assign Roles", "RoleIndex",  "Role")</li>
                            }
                        </ul>
                    </li>
                    <li class="divider"></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Products <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View Products", "Index", "Product")</li>

                            @if (Request.IsAuthenticated && HttpContext.Current.User.IsInRole("Admin"))
                            {
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Create Products", "Create", "Product")</li>
                            }
                        </ul>
                    </li>
                </ul>

                <div class="navbar-form navbar-right" style="margin-right: 5px;">
                    @if (Request.IsAuthenticated)
                    {
                        <div class="row">
                            <div class="form-group">
                                <text>
                                <span style="color:white">Hello</span> @Html.ActionLink(User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "", title = "Manage" })
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @class = "form-control", id = "logoutform" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <a href="javascript:document.getElementById('logoutform').submit()">Log off</a>
                                }
                            </text>
                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>
    </nav>


    <!-- End of navigation bar -->

    <!-- Start of Main content -->
    <div class="container">
        <div>
            @RenderSection("featured", required: false)
        </div>
        <!--Main Body goes here-->
        @RenderBody()
        <!--Endof Main Body-->
    </div>
    <!--End of Main Content-->

    <!-- Start of footer -->
    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <h4>Address</h4>
                    <address>
                        Block H, Plot 33 Ithad Alakoniyi,<br>
                        Agbede Olosugbo, Ikorodu<br>
                        Lagos State.
                    </address>
                </div>
                <div class="col-md-5">
                </div>
            </div>
            <div class="bottom-footer">
                <div class="col-md-5">Sparks Design Solution &copy; @DateTime.Now.Year</div>
                <div class="col-md-7">
                    <ul class="footer-nav">
                        <li><a href="index.html">Home</a></li>
                        <li><a href="contact.html">Contact</a></li>
                        <li><a href="about.html">About</a></li>
                        <li><a href="">Link</a></li>
                    </ul>
                </div>
            </div>
        </div>

    </footer>
    <!-- End of footer -->

    <!--Referenced scripts-->

    <!--<script type="text/javascript" src="~/Scripts/jquery-1.7.1.min.js"></script>-->
   
    
    <script type="text/javascript" src="~/Content/bootstrap-3.3.5/js/bootstrap.js"></script>
     
    <!--<script type="text/javascript" src ="~/Scripts/jquery.validate.unobtrusive.min.js"></script>-->
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")"></script>
    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    
    <script src="~/Scripts/Utility.js"></script>

    
    
    <script type="text/javascript" src="~/Content/jquery-ui-1.11.4/jquery-ui.min.js"></script>


    @RenderSection("scripts", required: false)
</body>
</html>
