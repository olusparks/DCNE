@model DCNE_Cake.Models.Complaint

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

@using (Html.BeginForm("Edit", "complaint", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.ComplaintID)

    <div class="row">
        <div class="col-md-6">
            <div class="page-header">
                <h2>Edit</h2>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ComplaintBox, htmlAttributes: new{ @class = "col-md-2 control-label"})
                <div class="col-md-10">
                  @Html.TextAreaFor(m => m.ComplaintBox, htmlAttributes: new{ @class = "form-control"})
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(m => m.ComplaintCategory.ComplaintCatName, htmlAttributes: new{ @class = "col-md-2 control-label"})
                <div class="col-md-10">
                    @Html.DropDownList("ComplaintCateId", ViewBag.ComplaintCateId as SelectList, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Location.LocationName, htmlAttributes: new{ @class = "col-md-2 control-label"})
                <div class="col-md-10">
                    @Html.DropDownList("LocationId", ViewBag.LocationId as SelectList, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-10 col-md-offset-2">
                <button type="submit" class="btn btn-primary ">Save</button>
                @Html.ActionLink("Back", "Index", "complaint", routeValues: null, htmlAttributes: new { @class = "btn btn-warning" })
            </div>
        </div>
    </div>
    
}

